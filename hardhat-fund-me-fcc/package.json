{
  "name": "hardhat-fund-me",
  "auther": "FengZhi",
  "version": "1.0.0",
  "description": "A simple Hardhat project for FundMe contract deployment and testing",
  "main": "hardhat.config.ts",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "3.0.6",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "hardhat": "2.19.5",
    "hardhat-deploy": "^1.0.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^1.0.8",
    "solhint": "^6.0.2",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@chainlink/contracts": "0.8.0"
  },
  "scripts": {
    "test":"yarn hardhat test",
    "test:staging":"yarn hardhat test --network sepolia",
    "compile":"yarn hardhat compile",
    "lint":"solhint 'contracts/**/*.sol'",
    "lint:fix":"solhint 'contracts/**/*.sol' --fix",
    "gas-report":"yarn hardhat test --gas-report",
    "format":"yarn prettier --write .",
    "coverage":"yarn hardhat coverage",
    "deploy:local":"yarn hardhat deploy --network localhost",
    "deploy:sepolia":"yarn hardhat deploy --network sepolia",
    "verify:sepolia":"yarn hardhat verify --network sepolia"
  }
}
